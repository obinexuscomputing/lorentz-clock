{
  "name": "@obinexuscomputing/lorentz-clock",
  "version": "0.1.0",
  "description": "A TypeScript library for relativistic time calculations and geospatial synchronization",
  "main": "dist/lorentz-clock.cjs.js",
  "module": "dist/lorentz-clock.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "husky install",
    "prepublishOnly": "npm run build:prod"
  },
  "keywords": [
    "lorentz",
    "relativity",
    "time-dilation",
    "geolocation",
    "typescript"
  ],
  "author": "ObiNexus Computing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obinexuscomputing/lorentz-clock.git"
  },
  "bugs": {
    "url": "https://github.com/obinexuscomputing/lorentz-clock/issues"
  },
  "homepage": "https://github.com/obinexuscomputing/lorentz-clock#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/inversify": "^2.0.32",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "prettier": "^2.5.0",
    "rollup": "^2.60.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.5.0"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
