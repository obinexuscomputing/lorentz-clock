{
  "name": "@obinexuscomputing/lorentz-clock",
  "version": "0.1.0",
  "description": "A TypeScript library for relativistic time calculations and geospatial synchronization",
  "main": "dist/lorentz-clock.cjs.js",
  "module": "dist/lorentz-clock.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "husky install",
    "prepublishOnly": "npm run build:prod"
  },
  "dependencies": {
    "inversify": "^6.1.6",
    "reflect-metadata": "^0.2.1",
