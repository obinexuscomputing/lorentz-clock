{
  "name": "@obinexuscomputing/lorentz-clock",
  "version": "0.1.0",
  "description": "A TypeScript library for relativistic time calculations and geospatial synchronization",
  "main": "dist/lorentz-clock.cjs.js",
  "module": "dist/lorentz-clock.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ts-node --esm rollup.config.ts",
    "build:prod": "NODE_ENV=production ts-node --esm rollup -c",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "husky install",
    "prepublishOnly": "npm run build:prod"
  },
  "dependencies": {
    "inversify": "^6.1.6",
    "reflect-metadata": "^0.2.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "prettier": "^2.5.0",
    "rollup": "^2.60.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.5.0"
  }
}
